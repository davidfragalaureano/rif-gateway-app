{
  "name": "react-app-rif-template",
  "version": "0.1.0",
  "private": true,
  "homepage": ".",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "build-gh-pages": "cross-env PUBLIC_URL=/rBench react-scripts build",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "test": "react-scripts test --verbose --watchAll=false",
    "test:watch": "react-scripts test",
    "test:coverage": "react-scripts test --verbose --coverage --watchAll=false",
    "test:ci": "react-scripts test --verbose --coverage --watchAll=false --coverageDirectory reports --maxWorkers=2",
    "lint": "eslint \"src/**/*.{js,jsx,ts,tsx}\"",
    "lint:ci": "eslint \"src/**/*.{js,jsx,ts,tsx}\" --format junit --output-file ./reports/eslint.xml"
  },
  "resolutions": {
    "@types/react": "^17.0.2",
    "@types/react-dom": "17.0.9"
  },
  "dependencies": {
    "@emotion/react": "^11.4.1",
    "@emotion/styled": "^11.3.0",
    "@mui/icons-material": "^5.0.0",
    "@mui/lab": "^5.0.0-alpha.47",
    "@mui/material": "^5.0.0",
    "@mui/styled-engine-sc": "^5.0.0",
    "@mui/styles": "^5.0.0",
    "@rsksmart/rlogin": "1.2.0-beta.2",
    "@rsksmart/rns-resolver.js": "^1.0.1",
    "@rsksmart/rsk-contract-metadata": "^1.0.13",
    "@rsksmart/rsk-testnet-contract-metadata": "^1.0.10",
    "@walletconnect/web3-provider": "^1.6.5",
    "bignumber.js": "^9.0.1",
    "eth-rpc-errors": "^4.0.3",
    "ethers": "^5.4.7",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-qr-code": "^2.0.2",
    "react-router-dom": "^5.3.0",
    "react-scripts": "4.0.3",
    "styled-components": "^5.3.1",
    "typescript": "^4.4.3",
    "zustand": "^3.5.10"
  },
  "devDependencies": {
    "@rsksmart/mock-web3-provider": "^0.0.1",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.1.0",
    "@testing-library/user-event": "^13.2.1",
    "@types/enzyme": "^3.10.9",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.9.4",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.9",
    "@types/react-router-dom": "^5.1.9",
    "@typescript-eslint/eslint-plugin": "4.31.2",
    "@typescript-eslint/parser": "4.31.2",
    "clipboardy": "^2.3.0",
    "cross-env": "^7.0.3",
    "cypress": "^8.4.1",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.6",
    "enzyme-to-json": "^3.6.2",
    "eslint": "^7.32.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jest": "^24.4.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-react": "^7.25.3",
    "eslint-plugin-standard": "^5.0.0",
    "eth-sig-util": "^3.0.1",
    "ts-jest": "^27.0.5",
    "web-vitals": "^2.1.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/**/*.d.ts",
      "!src/index.tsx",
      "!src/reportWebVitals.ts"
    ],
    "coveragePathIgnorePatterns": [
      "./src/*/*.types.{ts,tsx}",
      "./src/index.tsx",
      "./src/reportWebVitals.ts"
    ],
    "coverageReporters": [
      "html",
      "text"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 80,
        "branches": 80,
        "lines": 80,
        "functions": 80
      }
    },
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "transform": {
      "^.+\\.(js|jsx|ts|tsx)$": "<rootDir>/node_modules/ts-jest"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|ts|tsx)$",
      "^.+\\.module\\.(css|sass|scss)$"
    ],
    "moduleNameMapper": {
      "\\.(gif|png|eot|svg)$": "<rootDir>/tests/config/mockImage.js"
    }
  }
}
